<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>console_client/src/main/resources/tdlib/log/simple_telegram_client.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
